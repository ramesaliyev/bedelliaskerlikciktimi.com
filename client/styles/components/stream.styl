.stream
  position relative
  height 360px
  margin 30px 20px
  padding 20px
  box-sizing border-box
  border 1px solid #DBDEDD
  border-radius 3px
  text-align left
  overflow auto
  overflow-x hidden
  overflow-y scroll
  box-shadow 0px 0px 11px 0px #dbdedd
  -webkit-overflow-scrolling touch

.stream-title
  display block
  font-weight 700
  margin-bottom 30px

.stream-content
  color #333
  list-style none
  margin 0
  padding 0

.stream-content-item
  margin-top 20px
  padding-bottom 20px
  border-bottom 1px solid #eee

.stream-content-text
  display block
  margin 0 0 5px 0
  line-height 20px
  font-size 13px

  a
    color #000
    text-decoration underline

.stream-content-author
  color #ccc

.stream-content-date
  display block
  font-size 11px

.stream-read-more
  display block
  margin-top 30px
  font-size 12px

.stream-update-time
  font-size 11px
  color #ccc

@media only screen and (min-width:700px)
  .stream
    height 420px

@media only screen and (min-width:800px)
  .stream
    display inline-block
    margin-bottom 0
    width 40%
    height 480px

    &:nth-child(2n+2)
      margin-left 0

@media only screen and (min-width:934px)
  .stream
    height 520px

@media only screen and (min-width:1168px)
  .stream
    height 620px